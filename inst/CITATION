year <- sub("-.*", "", meta$Date)
note <- sprintf("R package (version %s)", meta$Version)

citHeader("To cite imudata in publications use:")
citEntry(entry = "Misc",
         title = "imudata: MEMS-IMU Data Sets",
         author = c(person("James", "Balamuta"),
                    person("Stephane", "Guerrier"),
                    person("Roberto", "Molinari"),
                    person("Wenchao", "Yang")),
         year = year,  
         howpublished = note,
         note = "GitHub repository: \\url{https://github.com/SMAC-Group/imudata}",
         url = "https://github.com/SMAC-Group/datarepo",
         textVersion =
           paste0("James Balamuta, Stephane Guerrier, Roberto Molinari,",
                  "and Wenchao Yang (",
                  year,
                  "). imudata: MEMS-IMU Data Sets. ",
                  note, ". GitHub repository: https://github.com/SMAC-Group/imudata.")
)